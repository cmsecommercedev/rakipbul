<?xml version="1.0" encoding="utf-8"?>
<configuration>
 <system.web>
    <!-- ASP.NET request limit (KB cinsinden) -->
    <httpRuntime maxRequestLength="2048000" executionTimeout="600" />
    <!-- 204800 KB = 200 MB -->
  </system.web>
	<system.webServer>
  <security>
      <requestFiltering>
        <!-- IIS limit (byte cinsinden) -->
        <requestLimits maxAllowedContentLength="2097152000" />
        <!-- 209715200 byte = 200 MB -->
      </requestFiltering>
    </security>
		<handlers>
			<add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
		</handlers>
		<aspNetCore processPath="dotnet" arguments=".\RakipBul.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="inprocess">
			<environmentVariables>
				<environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Live" />
			</environmentVariables>
		</aspNetCore>
	</system.webServer>
</configuration>
