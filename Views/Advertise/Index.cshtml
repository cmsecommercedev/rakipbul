@model IEnumerable<RakipBul.Models.Advertise>

@{
    ViewData["Title"] = "Sponsor Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container mx-auto px-4 py-8">

    @* Başarı/Hata Mesajları - Settings stilinde *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-600 text-white p-4 rounded-lg mb-4" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-600 text-white p-4 rounded-lg mb-4" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    @* --- Sponsor Ekleme Formu --- *@
    <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-6">
        <h2 class="text-2xl font-bold text-yellow-500 mb-6">Sponsor Ekle</h2>

        <form asp-action="Create" asp-controller="Advertise" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label for="Name" class="block text-sm font-medium text-gray-300 mb-1">Reklam Adı</label>
                    <input type="text" id="Name" name="Name" required
                           class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500">
                </div>
                <div>
                    <label for="LinkUrl" class="block text-sm font-medium text-gray-300 mb-1">Bağlantı URL'si</label>
                    <input type="url" id="LinkUrl" name="LinkUrl"
                           class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500">
                </div>
            </div>

            <div class="mb-6">
                <label for="ImageFile" class="block text-sm font-medium text-gray-300 mb-1">Resim Dosyası</label>
                <input type="file" id="ImageFile" name="ImageFile" accept="image/*" required
                       class="w-full text-sm text-gray-400 file:mr-4 file:py-2 file:px-4
                              file:rounded-md file:border-0 file:text-sm file:font-semibold
                              file:bg-yellow-500 file:text-gray-900 hover:file:bg-yellow-600
                              cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-yellow-500">
                <p class="mt-1 text-xs text-gray-500">İzin verilen formatlar: JPG, PNG, GIF vb. (Max 5MB)</p>
            </div>

            <div class="mb-6">
                <label for="Category" class="block text-sm font-medium text-gray-300 mb-1">Kategori</label>
                <select id="Category" name="Category" required
                        class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500">
                    <option value="G">Genel Sponsor</option>
                    <option value="S">Şehir Sponsoru</option>
                </select>
            </div>

            <div class="mb-6" id="citySelection" style="display: none;">
                <label for="CityId" class="block text-sm font-medium text-gray-300 mb-1">Şehir</label>
                <select id="CityId" name="CityId"
                        class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500">
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.CityID">@city.Name</option>
                    }
                </select>
            </div>

            <div class="mb-6">
                <label for="AltText" class="block text-sm font-medium text-gray-300 mb-1">Resim Alt Metni (SEO)</label>
                <input type="text" id="AltText" name="AltText"
                       class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:border-yellow-500 focus:ring-1 focus:ring-yellow-500">
                <p class="mt-1 text-xs text-gray-500">Resim yüklenemezse veya SEO için kullanılır.</p>
            </div>

            <div class="flex items-center mb-6">
                <input id="IsActive" name="IsActive" type="checkbox" value="true" checked
                       class="form-checkbox h-5 w-5 text-yellow-500 bg-gray-700 border-gray-600 rounded focus:ring-yellow-500 focus:ring-offset-gray-800">
                <label for="IsActive" class="ml-2 block text-sm text-gray-300">Aktif mi?</label>
                <input type="hidden" name="IsActive" value="false" />
            </div>

            <div>
                <button type="submit"
                        class="bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-bold py-2 px-4 rounded transition-colors">
                    <i class="fas fa-plus mr-1"></i> Reklamı Kaydet
                </button>
            </div>
        </form>
    </div>

    @* --- Mevcut Reklamlar Tablosu --- *@
    <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <h2 class="text-2xl font-bold text-yellow-500 p-6">Mevcut Reklamlar</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-700">
                <thead class="bg-gray-700">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                            Resim
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                            Kategori
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                            Şehir
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().IsActive)
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.FirstOrDefault().UploadDate)
                        </th>
                        <th scope="col" class="relative px-6 py-3">
                            <span class="sr-only">İşlemler</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-gray-800 divide-y divide-gray-700">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-4 whitespace-nowrap text-sm text-center text-gray-400">
                                Henüz reklam eklenmemiş.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                    @* --- Resim Gösterimi --- *@
                                    <div class="flex space-x-2 relative group">
                                        @if (!string.IsNullOrEmpty(item.ImagePath))
                                        {
                                            <div class="relative">
                                                <img src="@Url.Content(item.ImagePath)"
                                                     alt="@(item.AltText ?? item.Name)" 
                                                     class="h-16 w-auto object-contain rounded" 
                                                     title="Reklam Resmi" /> 
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-gray-500">Resim Yok</span>
                                        }
                                    </div>
                                    @* --- Resim Gösterimi Sonu --- *@
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                    @(item.Category == "G" ? "Genel Sponsor" : "Şehir Sponsoru")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                    @(item.Category == "G" ? "-" : item.City?.Name)
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                    @if (item.IsActive)
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-600 text-green-100">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-600 text-red-100">Pasif</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                    @item.UploadDate.ToString("g")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                                    @* Düzenleme butonu (isteğe bağlı) *@
                                    @*
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-yellow-500 hover:text-yellow-600" title="Düzenle">
                            <i class="fas fa-edit"></i>
                            </a>
                            *@

                                    @* Silme Formu *@
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="inline"
                                          onsubmit="return confirm('`@item.Name` reklamını ve ilişkili resmini silmek istediğinizden emin misiniz?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="text-red-500 hover:text-red-400" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div> @* container sonu *@

@* Modal ve ilişkili scriptler kaldırıldı *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('Category').addEventListener('change', function() {
            var citySelection = document.getElementById('citySelection');
            var citySelect = document.getElementById('CityId');

            if (this.value === 'S') {
                citySelection.style.display = 'block';
                citySelect.required = true;
            } else {
                citySelection.style.display = 'none';
                citySelect.required = false;
                citySelect.value = '';
            }
        });

        // Form gönderilmeden önce kontrol
        document.querySelector('form').addEventListener('submit', function(e) {
            var category = document.getElementById('Category').value;
            var citySelect = document.getElementById('CityId');
            
            if (category === 'G') {
                // Genel sponsor seçiliyse CityId'yi formdan kaldır
                citySelect.disabled = true;
            } else {
                citySelect.disabled = false;
            }
        });
    </script>
}  