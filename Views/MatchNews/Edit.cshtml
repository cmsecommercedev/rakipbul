@model RakipBul.Models.MatchNews
@{
    ViewData["Title"] = "Haber Düzenle";
    Layout = "_AdminLayout";
}

<div class="min-h-screen bg-gray-900">
    <style>
        .fixed-image-frame {
            height: 12rem;
        }

        @@media (min-width: 1024px) {
            .fixed-image-frame {
                height: 16rem;
            }
        }

        .fixed-image-frame img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
    </style>
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden mb-6">
            <div class="p-6">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold text-yellow-500">Haber Düzenle</h2>
                </div>

                <form asp-action="Edit" method="post" enctype="multipart/form-data" class="space-y-6">
                    <input type="hidden" asp-for="Id" />
                    <div class="grid grid-cols-1 gap-6">
                        <!-- Kategori -->
                        <div>
                            <label class="block text-sm font-medium text-gray-300">Kategori</label>
                            <select name="Category" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <option value="News" selected="@(Model.Category.ToString() == "News")">News</option>
                                <option value="Story" selected="@(Model.Category.ToString() == "Story")">Story</option>
                            </select>
                        </div>

                        <!-- Ana Fotoğraf -->
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-300 mb-2">Ana Fotoğraf</label>
                                <div class="border-2 border-dashed border-gray-600 rounded-lg p-6 text-center hover:border-yellow-500 transition-colors">
                                    <div class="space-y-2">
                                        <i class="fas fa-cloud-upload-alt text-3xl text-gray-400"></i>
                                        <div>
                                            <label for="MainPhoto" class="cursor-pointer">
                                                <span class="text-yellow-500 hover:text-yellow-400">Ana fotoğraf seçin</span>
                                                <input type="file" name="MainPhoto" id="MainPhoto" class="hidden" accept="image/*" onchange="previewMainImage(event)">
                                            </label>
                                        </div>
                                        <p class="text-xs text-gray-500">PNG, JPG, GIF maksimum 10MB</p>
                                    </div>
                                    <div id="mainPhotoPreview" class="mt-4 fixed-image-frame">
                                        <img id="mainPhotoImg" src="@Model.MatchNewsMainPhoto" alt="Ana fotoğraf önizleme">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Çok Dilli İçerik -->
                        <div class="space-y-6">
                            @{
                                var tr = Model.Contents.FirstOrDefault(c => c.Culture == "tr"); var en = Model.Contents.FirstOrDefault(c => c.Culture == "en"); var ro = Model.Contents.FirstOrDefault(c => c.Culture == "ro"); var ru = Model.Contents.FirstOrDefault(c => c.Culture == "ru");
                            }
                            <div>
                                <h3 class="text-lg font-semibold text-yellow-500 mb-2">Türkçe (tr)</h3>
                                <label class="block text-sm font-medium text-gray-300">Başlık</label>
                                <input name="Title_tr" value="@tr?.Title" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Alt Başlık</label>
                                <input name="Subtitle_tr" value="@tr?.Subtitle" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Detay Başlığı</label>
                                <input name="DetailsTitle_tr" value="@tr?.DetailsTitle" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Detaylar</label>
                                <textarea name="Details_tr" rows="4" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">@tr?.Details</textarea>
                            </div>

                            <div>
                                <h3 class="text-lg font-semibold text-yellow-500 mb-2">English (en)</h3>
                                <label class="block text-sm font-medium text-gray-300">Title</label>
                                <input name="Title_en" value="@en?.Title" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Subtitle</label>
                                <input name="Subtitle_en" value="@en?.Subtitle" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Details Title</label>
                                <input name="DetailsTitle_en" value="@en?.DetailsTitle" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Details</label>
                                <textarea name="Details_en" rows="4" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">@en?.Details</textarea>
                            </div>

                            <div>
                                <h3 class="text-lg font-semibold text-yellow-500 mb-2">Română (ro)</h3>
                                <label class="block text-sm font-medium text-gray-300">Titlu</label>
                                <input name="Title_ro" value="@ro?.Title" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Subtitlu</label>
                                <input name="Subtitle_ro" value="@ro?.Subtitle" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Titlul detaliilor</label>
                                <input name="DetailsTitle_ro" value="@ro?.DetailsTitle" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Detalii</label>
                                <textarea name="Details_ro" rows="4" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">@ro?.Details</textarea>
                            </div>

                            <div>
                                <h3 class="text-lg font-semibold text-yellow-500 mb-2">Русский (ru)</h3>
                                <label class="block text-sm font-medium text-gray-300">Заголовок</label>
                                <input name="Title_ru" value="@ru?.Title" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Подзаголовок</label>
                                <input name="Subtitle_ru" value="@ru?.Subtitle" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Заголовок деталей</label>
                                <input name="DetailsTitle_ru" value="@ru?.DetailsTitle" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">
                                <label class="block text-sm font-medium text-gray-300 mt-3">Детали</label>
                                <textarea name="Details_ru" rows="4" class="mt-1 block w-full rounded-md border-gray-700 bg-gray-700 text-white shadow-sm focus:border-yellow-500 focus:ring-yellow-500">@ru?.Details</textarea>
                            </div>
                        </div>

                        <!-- Ek Fotoğraflar -->
                        <div class="mt-3 pt-3 border-t border-gray-700">
                            <label class="block text-sm font-medium text-gray-300 mb-2">Ek Fotoğraflar</label>
                            <div class="border-2 border-dashed border-gray-600 rounded-lg p-6 text-center hover:border-yellow-500 transition-colors">
                                <div class="space-y-2">
                                    <i class="fas fa-images text-3xl text-gray-400"></i>
                                    <div>
                                        <label for="ImageFiles" class="cursor-pointer">
                                            <span class="text-yellow-500 hover:text-yellow-400">Ek fotoğraflar seçin</span>
                                            <input type="file" name="ImageFiles" id="ImageFiles" class="hidden" accept="image/*" multiple>
                                        </label>
                                    </div>
                                    <p class="text-xs text-gray-500">Birden fazla fotoğraf seçebilirsiniz</p>
                                </div>
                            </div>

                            @if (Model.Photos != null && Model.Photos.Any())
                            {
                                <div id="imagesPreviewContainer" class="mt-3 flex flex-wrap gap-2">
                                    @foreach (var photo in Model.Photos)
                                    {
                                        <div class="relative group">
                                            <img src="@photo.PhotoUrl" data-id="@photo.Id" class="w-16 h-16 lg:w-20 lg:h-20 object-cover rounded-md transition-transform duration-200 transform hover:scale-105">

                                            <button type="button"
                                                    class="delete-photo opacity-0 group-hover:opacity-100 transition-opacity duration-200 absolute top-1 right-1 bg-white text-red-600 w-6 h-6 flex items-center justify-center rounded-full shadow-md hover:bg-red-600 hover:text-white focus:outline-none"
                                                    onclick="deletePhoto(photo.id)"
                                                    data-id="@photo.Id">
                                                <i class="fas fa-times text-xs"></i>
                                            </button>
                                        </div>
                                    }

                                </div>
                            }
                        </div>
                    </div>

                    <div class="flex justify-end space-x-3 pt-4 border-t border-gray-700">
                        <a href="@Url.Action("Index")" class="bg-gray-700 text-white px-6 py-2 rounded-md hover:bg-gray-600 transition-colors">Geri</a>
                        <button type="submit" class="bg-yellow-600 text-white px-6 py-2 rounded-md hover:bg-yellow-700 transition-colors">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewMainImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('mainPhotoImg').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        }

        function deletePhoto(id) {
            return fetch('@Url.Action("DeletePhoto")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: `id=${id}`
            })
            .then(r => r.json())
            .then(result => {
                if (result.success) {
                    return true; // başarılı
                } else {
                    toastr.error(result.message || 'Fotoğraf silinemedi');
                    return false;
                }
            })
            .catch(err => {
                console.error(err);
                toastr.error('Fotoğraf silinemedi');
                return false;
            });
        }


        let existingPhotos = []; // serverdan gelen mevcut fotoğraflar
        let newFiles = [];       // kullanıcı eklediği yeni fotoğraflar

        // Sayfa yüklendiğinde var olanları al
        document.addEventListener('DOMContentLoaded', () => {
            existingPhotos = Array.from(document.querySelectorAll('#imagesPreviewContainer img')).map(img => ({
                id: img.dataset.id,   // var olan foto ID'si
                src: img.src,
                isNew: false
            }));
            updatePreview();
        });

        // Input değiştiğinde yeni dosyaları ekle
        const imageInput = document.getElementById('ImageFiles');
        imageInput.addEventListener('change', (event) => {
            const files = Array.from(event.target.files);
            newFiles = newFiles.concat(files.map(f => ({ file: f, isNew: true })));
            updatePreview();
        });

        function updatePreview() {
            const preview = document.getElementById('imagesPreviewContainer');
            preview.innerHTML = '';

            // Var olan fotoğraflar
            existingPhotos.forEach((photo, index) => {
                const div = document.createElement('div');
                div.className = 'relative group';

                const img = document.createElement('img');
                img.src = photo.src;
                img.className = 'w-16 h-16 lg:w-20 lg:h-20 object-cover rounded-md transition-transform duration-200 transform hover:scale-105';
                div.appendChild(img);

                const btn = document.createElement('button');
                btn.type = 'button';
                btn.className = 'opacity-0 group-hover:opacity-100 transition-opacity duration-200 absolute top-1 right-1 bg-white text-red-600 w-6 h-6 flex items-center justify-center rounded-full shadow-md hover:bg-red-600 hover:text-white focus:outline-none';
                btn.innerHTML = '<i class="fas fa-times text-xs"></i>';
                        btn.onclick = () => {
            if (photo.isNew) {
                // Yeni eklenen fotoğraf → sadece local'den kaldır
                newFiles.splice(index, 1);
                updatePreview();
            } else {
                // Var olan fotoğraf → server'dan sil ve local'den kaldır
                deletePhoto(photo.id)
                    .then(success => {
                        if (success) {
                            existingPhotos.splice(index, 1);
                            updatePreview();
                        }
                    });
            }
        }
                div.appendChild(btn);

                preview.appendChild(div);
            });

            // Yeni seçilen fotoğraflar
            newFiles.forEach((item, index) => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const div = document.createElement('div');
                    div.className = 'relative group';

                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'w-16 h-16 lg:w-20 lg:h-20 object-cover rounded-md transition-transform duration-200 transform hover:scale-105';
                    div.appendChild(img);

                    const btn = document.createElement('button');
                    btn.type = 'button';
                    btn.className = 'opacity-0 group-hover:opacity-100 transition-opacity duration-200 absolute top-1 right-1 bg-white text-red-600 w-6 h-6 flex items-center justify-center rounded-full shadow-md hover:bg-red-600 hover:text-white focus:outline-none';
                    btn.innerHTML = '<i class="fas fa-times text-xs"></i>';
        btn.onclick = () => {
                    if (photo.isNew) {
                        // Yeni eklenen fotoğraf → sadece local'den kaldır
                        newFiles.splice(index, 1);
                        updatePreview();
                    } else {
                        // Var olan fotoğraf → server'dan sil ve local'den kaldır
                        deletePhoto(photo.id)
                            .then(success => {
                                if (success) {
                                    existingPhotos.splice(index, 1);
                                    updatePreview();
                                }
                            });
                    }
                }
                    div.appendChild(btn);

                    preview.appendChild(div);
                }
                reader.readAsDataURL(item.file);
            });
        }


    </script>
}

