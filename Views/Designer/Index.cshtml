    // Image Layer Functions
    function createImageLayer(imageUrl, x, y, width = 120, height = 120) {
        const layer = {
            id: state.nextImageLayerId++,
            imageUrl: imageUrl,
            x: x,
            y: y,
            width: width,
            height: height
