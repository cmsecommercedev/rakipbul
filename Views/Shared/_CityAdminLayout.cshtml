<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RakipBul Admin</title>
    <link href="~/css/tail-wind.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    <!-- Alternatif formatlar için: -->
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico">
    <link rel="apple-touch-icon" href="~/images/favicon.ico">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

</head>
<body class="bg-gray-900">
    <!-- Header Bar -->
    <header class="bg-gray-800 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- RakipBul Admin Logo -->
                <div class="hidden md:flex items-center space-x-4">
                    <a href="@Url.Action("Dashboard", "CityAdmin")" class="text-white font-bold text-xl">
                        RakipBul Admin
                    </a>
                </div><div class="md:flex items-center space-x-4">
                    <a href="/CityAdmin/Teams" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Takımlar</a>
                    <a href="/CityAdmin/Suspensions" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Cezalılar</a>
                    <a href="/CityAdmin/WeekBestTeam" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Haftanın Enleri</a>
                    <a href="/MatchNews/Index" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Haberler</a>
                    <a href="/CityRestriction/Manage" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Şehir Kısıtlamaları</a>
                </div>

                <!-- Sağdaki Menü Elemanları -->
                <div class="flex items-center space-x-4 ml-auto">
                    <span class="hidden md:inline text-gray-300">
                        @Context.Session.GetString("UserName")
                    </span>

                    <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                        <button type="submit" class="text-gray-300 hover:text-red-500 px-3 py-2">
                            <i class="fas fa-sign-out-alt text-xl"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="flex flex-col md:flex-row min-h-screen">
            <div class="flex-1 p-4 pb-20 md:pb-4">
                @RenderBody()
            </div>
        </div>

    </main>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 